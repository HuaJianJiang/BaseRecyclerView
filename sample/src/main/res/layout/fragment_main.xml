<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.huajianjiang.baserecyclerview.sample.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.github.huajianjiang.baserecyclerview.widget.BaseRecyclerView
        android:id="@+id/rv_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:header_footer_fullSpan="true"
        app:layoutManager="GridLayoutManager"
        app:nestedScrollingEnabled="true"
        app:spanCount="2"
        android:tag="rv_top"/>

    <com.github.huajianjiang.baserecyclerview.widget.BaseRecyclerView
        android:id="@+id/rv_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        app:header_footer_fullSpan="true"
        app:layoutManager="GridLayoutManager"
        app:nestedScrollingEnabled="true"
        app:spanCount="2"
        android:tag="rv_bottom"/>


</LinearLayout>
